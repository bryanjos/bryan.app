---
layout: layouts/base.njk
permalink: "posts/{{ title | slug }}/"
---

<article class="h-entry">
  <h1 class="p-name">{{title}}</h1>
  <p class="metadata">Published by <a class="p-author" href="http://example.com">Bryan Joseph</a>
     on <time class="dt-published" datetime="{{date}}">{{ date | date }}</time></p>

  <div class="e-content">
    {{ content | safe }}
  </div>
</article>
